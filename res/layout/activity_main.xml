<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="left"
    android:layout_margin="2dp" >

    <TableRow>

        <EditText
            android:id="@+id/serverName"
            android:layout_weight=".5"
            android:hint="@string/server_name"
            android:singleLine="true" />

		<Spinner
		    android:id="@+id/intervalSpinner"
		    android:layout_height="match_parent"
		    android:layout_weight=".5"
		    android:entries="@array/secondsArray" />

    </TableRow>

    <TableRow>

        <ToggleButton
            android:id="@+id/startStop"
            android:onClick="toggleAction"
            android:textOff="@string/start"
            android:textOn="@string/stop"
            android:layout_weight=".20" />

        <ToggleButton
            android:id="@+id/toggleWifi"
            android:onClick="toggleWifi"
            android:textOff="@string/wifiOff"
            android:textOn="@string/wifiOn"
            android:layout_weight=".20" />

        <ToggleButton
            android:id="@+id/toggleData"
            android:onClick="toggleData"
            android:textOff="@string/dataOff"
            android:textOn="@string/dataOn"
            android:layout_weight=".20" />
        
        </TableRow>

    <TableRow>
        <TextView android:text="@string/pictureSize" />
		<Spinner
	        android:id="@+id/pictureSizeSpinner"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent" />
    </TableRow>

    <TableRow>
        <TextView android:text="@string/sceneMode" />        
	    <Spinner
	        android:id="@+id/sceneModeSpinner"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent" />
    </TableRow>
    
    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8" />

</TableLayout>